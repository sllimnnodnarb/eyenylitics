<div class="abthm lpad15">
  <h5><%= link_to "Home", welcome_index_path, class:  "cfont font18 .lpad10" %></h5>
</div>
<div class="bgcenter">
  <h1 class="ggggfont tpad15 lpad25 tmar25">Current Registered Applications</h1>
<div>
<div class="row">
  <h4 class="infoinfo tpad50">
    <div class="container pull-left">
      <h5 class="bmar75"><%= link_to "Add an App", new_registered_application_path, class: "pull-left lmarneg10 dfont font18 abs lmar10" %></h5>
    </div>
    <div class="tmar15 tcent bmar25">
      <% @reg_apps.each do |reg_app| %>
      <div class=" container bline2 lmar25per">
        <div class="tpad75">
          <h4><%= link_to reg_app.name, registered_application_path(reg_app[:id]) %></h4>
          <small> <%= reg_app.url %></small>
        </div>
      </div>
      <% end %>
    </div>
  </h4>
</div>
