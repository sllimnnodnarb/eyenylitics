<div class="abthm lpad15">
  <h5><%= link_to "Home", welcome_index_path, class:  "cfont font18 .lpad10" %></h5>
</div>
<div class="bgcenter">
  <div>
    <h1 class="ggggfont tpad15 lpad25 tmar25 bmar15 abs">Current Registered Applications</h1>
  </div>
  <div class="tmar abs">
    <%= link_to "Register an App", new_registered_application_path, class:  "dfont font18 tmar50 lmar15 abs" %>
  </div>
  <div class="wid50per tcent lmar25per tpad75 tmar rmar25per">
    <% @reg_apps.each do |reg_app| %>
      <div class="bline2 tcent wid50per lmar25per">
        <h4><%= link_to reg_app.name, registered_application_path(reg_app[:id]) %></h4>
        <small class=""> <%= reg_app.url %></small>
      </div>
    <% end %>
    <div class="tmar50">
      <a class="glyphicon glyphicon-align-left glyphist "></a>
      <a class="glyphicon glyphicon-stats glyphist"></a>
      <a class="glyphicon glyphicon-align-right glyphist"></a>
    </div>
  </div>
</div>
