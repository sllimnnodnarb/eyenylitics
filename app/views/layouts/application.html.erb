<!DOCTYPE html>
<html>
  <div class="bgimage">
  <head>
    <title>Eyenylitics</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Economica|Glegoo" rel="stylesheet">
  </head>
  <body>
    <div class="bgblack">
      <ul class="nav">
        <h1 class="gggfont gggwid"> EYENYLITICS</h1>
        <div>
          <% if user_signed_in? %>
          <%= image_tag current_user.avatar_url(48), class: "gvtr rmar10" %>
          <% end %>
          <small class="pull-right rmar10">
            <% if user_signed_in? %>
              <h5 class="pull-right rmar10 abfont">Signed in as :&nbsp<%= link_to current_user.email, user_session_path, class: 'afont' %></h5>
              <h5><%= link_to "Edit profile", edit_user_registration_path, class: 'pull-right rmar10 aaafont' %></h5>
              <h5><%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "pull-right rmar10 aafont" %></h5>
            <% else %>
              <%= link_to "Sign Up", new_user_registration_path, class: "pull-right rmar25 aafont"  %>
            <% end %>
            </small>
          </small>
        </div>
      </ul>
    </div>
      <% if flash[:notice] %>
        <div class="alert alert-success">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:notice] %>
        </div>
      <% elsif flash[:alert] %>
        <div class="alert alert-warning">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:alert] %>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
